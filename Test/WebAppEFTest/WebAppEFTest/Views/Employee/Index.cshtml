@using WebAppEFTest.Models
@model EmployeeListViewModel

@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@section TitleSection{
    MyView
}

@section ContentBody{
    <div>
        <h4>Employees</h4>
        <hr />
        @foreach (var employee in Model.Employees)
    {
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName(@employee.FirstName)
                </dt>

                <dt>
                    @Html.DisplayName(@employee.LastName)
                </dt>

                <dt>
                    @Html.DisplayName(@employee.Salary.ToString())
                </dt>
            </dl>
        }
    </div>
    <p>
        @{
            Html.RenderAction("GetAddNewLink");
        }
    </p>
}