@model WebAppEFTest.Models.Employee

@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@section TitleSection{
    Create Employee
}

@section HeaderSection{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}

@section ContentBody{
    <form action="/Employee/SaveEmployee" method="post">
        <div class="form-horizontal">
            <h4>Employee</h4>
            <hr />

            <div class="form-group">
                FirstName:
                <div class="col-md-10">
                    <input type="text" id="TxtFName" name="FirstName" />
                </div>
            </div>

            <div class="form-group">
                LastName:
                <div class="col-md-10">
                    <input type="text" id="TxtLName" name="LastName" />
                </div>
            </div>

            <div class="form-group">
                Salary:
                <div class="col-md-10">
                    <input type="text" id="TxtSalary" name="Salary" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}