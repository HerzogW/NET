@using ViewModel.SPA
@model MainViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-2.2.3.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4.js"></script>
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    <title>Employee Single Page Application</title>
    <script type="text/javascript">
        function openAddNew() {
            $.get("/SPA/Main/AddNew").then(
                function (r) {
                    $("<div id='DivCreateEmployee'></div>").html(r).dialog({ width: 'auto', height: 'auto', modal: true, title: "Create New Employee", close: function () { $("#DivCreateEmployee").remove() } });
                });
        }
    </script>
</head>
<body>
    <div style="text-align:right;">Hello, @Model.UserName  <a href="~/Authentication/Logout">注销</a></div>
    <div>
        @{
            Html.RenderAction("EmployeeList");
        }
    </div>
    <div id='DivCreateEmployee'></div>
    <div style="text-align:right;">@Model.FooterData.CompanyName @@ @Model.FooterData.Year</div>
</body>
</html>
